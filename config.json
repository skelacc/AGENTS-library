{
  "version": "1.0.0",
  "global_location": "~/.github/agent-kit",
  "paths": {
    "agents_directory": "~/.github/agent-kit/agents",
    "skills_directory": "~/.github/agent-kit/skills",
    "prompts_directory": "~/.github/agent-kit/prompts",
    "templates_directory": "~/.github/agent-kit/templates",
    "examples_directory": "~/.github/agent-kit/examples"
  },
  "documentation": {
    "agents_file": "AGENTS.md",
    "location": "project_root",
    "note": "Each project can have its own AGENTS.md documenting which agents it uses"
  },
  "settings": {
    "auto_register": true,
    "line_limits": {
      "agent_json": 100,
      "instructions": 150,
      "examples": 80,
      "skills": 100
    },
    "naming_convention": "lowercase-hyphen-separated"
  },
  "project_integration": {
    "note": "Projects reference this global location instead of copying files",
    "config_file": ".github/agents-config.json",
    "use_global_agents": true
  }
}
